{{#each errors}}
<div class="error">  {{this}} </div>
{{/each}}

<body class="background">
<form class="container" method="POST" action="/user/editUser/{{user._id}}?_method=PUT">
<section class="row justify-content-center">
  <section class="col-12 col-sm-8 col-md-6">
  <div class="form-container border rounded format">
    <div class="form-row">
    <div class="form-group col-6">
    <label>First Name</label>
    <input type="text" class="form-control" name="firstName" placeholder="Enter first Name" value="{{user.firstName}}">
    </div>
    <div class="form-group col-6">
    <label>Last Name</label>
    <input type="string" class="form-control" name="lastName" placeholder="Enter last name" value="{{user.lastName}}"> 
  </div>  
    </div>
    <div class="form-group">
    <label>Email</label>
    <input type="string" class="form-control" name="email" placeholder="Email" value="{{user.email}}"> 
  </div> 
  <input type="submit" value="Submit Form" class="btn btn-primary btn-block">
  </div> 
  </section>
  </section>
</form>
</body>